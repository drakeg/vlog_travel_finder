{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "reviewers": [],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements\\.txt$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "python dependencies"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major"
      ]
    }
  ]
}
